	u32 mask = 0x0000;
	u32 DataRead;
	//Read each MIO pin and set the corrosponding
	//bit in the mask
	for
}

int main()
{
    init_platform();

    print("Hello World\n\r");

    cleanup_platform();
    return 0;
}
